@using MotorAsinBasketRobot.Entities.ViewModel;
@model SignInViewModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="UniPro App">
    <meta name="author" content="ParkerThemes">
    <link rel="shortcut icon" href="~/Images/ma-logo.png" />
    <link rel="ICON" href="favicon.ico" type="~/Images/ma-logo.png" />
    <title>MOTOR AŞİN TEKNOLOJİ</title>
    <link rel="stylesheet" href="~/WebDesign/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/WebDesign/css/main.css">
</head>
<body class="authentication">
    <div id="loading-wrapper">
        <div class="spinner-border"></div>
        Loading...
    </div>
    <div class="login-container">

        <div class="container-fluid h-100">

            <!-- Row start -->
            <div class="row g-0 h-100">
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="login-about">
                        <div class="slogan">
                            <span> Hesabınıza</span>
                            <span>giriş</span>
                            <span>yapın</span>
                        </div>
                        <div class="about-desc">
                            motorasintekno.com panosu, bir işletmenin, departmanın veya belirli bir sürecin sağlığını izlemek için temel performans göstergelerini (KPI), ölçümleri ve önemli veri noktalarını görsel olarak izleyen, analiz eden ve görüntüleyen bir bilgi yönetimi aracıdır.
                        </div>
                        <a href="crm.html" class="know-more"></a>

                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="login-wrapper">
                        <form asp-controller="WebLogin" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURl"]" method="post">
                            <div class="login-screen">
                                <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                                </div>
                                <div class="login-body">
                                    <h6><br>Lütfen hesabınıza giriş yapın.</h6>
                                    <div class="field-wrapper">
                                        @*<input type="email" autofocus>*@
                                        <input type="email" asp-for="Email">
                                        <div class="field-placeholder">Email</div>
                                    </div>
                                    <div class="field-wrapper mb-3">
                                        <input value="" type="password" asp-for="Password">
                                        <div class="field-placeholder">Şifre</div>
                                    </div>

                                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                                    <label class="form--input" for="RememberMe" asp-for="RememberMe"></label>
                                    <div class="actions">
                                        <a href="/WebLogin/ForgetPassword">Şifremi Unuttum</a>
                                        <button type="submit" class="btn btn-primary">Giriş</button>
                                    </div>
                                </div>
                                @* <div class="login-footer">
                                <span class="additional-link">No Account? <a href="signup.html" class="btn btn-light">Sign Up</a></span>
                                </div>*@
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <!-- Row end -->


        </div>
    </div>
    <script src="~/WebDesign/js/jquery.min.js"></script>
    <script src="~/WebDesign/js/bootstrap.bundle.min.js"></script>
    <script src="~/WebDesign/js/modernizr.js"></script>
    <script src="~/WebDesign/js/moment.js"></script>
    <script src="~/WebDesign/js/main.js"></script>
</body>
</html>